<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="false"
    app:cardMaxElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/proposta_proposta"
            android:minWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/valor_proposta_item"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/data_proposta"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/data_inicio_proposta"
            android:minWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/data_fim_proposta"
            android:minWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/demanda_proposta"
            android:minWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/user_proposta"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/to_user_proposta"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.cardview.widget.CardView>