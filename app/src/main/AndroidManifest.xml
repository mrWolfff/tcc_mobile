<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tcc_mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.edit_demanda"
            android:label="@string/title_activity_edit_demanda"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".views.cadastro_user"
            android:label="@string/title_activity_cadastro_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.servicos"
            android:label="@string/title_activity_servicos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.demandas"
            android:label="@string/title_activity_demandas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.box_message"
            android:label="@string/title_activity_box_message"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.create_demanda"
            android:label="@string/title_activity_post_demanda"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".index"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>